# Flask Secret Key (Generate a strong random key for production)
SECRET_KEY=change_me_to_random_secret_key

# OpenRouter API Key (Optional - for AI-powered analysis)
# Get your API key from: https://openrouter.ai
# Leave blank to disable AI features
OPENROUTER_API_KEY=

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=False

# Database Configuration
DATABASE_PATH=cybersage_v2.db

# WebSocket Configuration
SOCKETIO_PING_TIMEOUT=60
SOCKETIO_PING_INTERVAL=25

# CORS Configuration (comma-separated origins)
# Use * for all origins (development only)
CORS_ORIGINS=*

# Scan Configuration
DEFAULT_SCAN_TIMEOUT=300
MAX_CONCURRENT_SCANS=5
SCAN_RESULT_RETENTION_DAYS=30

# Tool Configuration
NMAP_PATH=/usr/bin/nmap
SUBFINDER_PATH=/usr/bin/subfinder

# Rate Limiting (requests per minute)
API_RATE_LIMIT=100

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/cybersage.log

# Security Headers
ENABLE_HSTS=True
ENABLE_CSP=True

# Report Generation
REPORTS_DIR=reports/
MAX_REPORT_SIZE_MB=50